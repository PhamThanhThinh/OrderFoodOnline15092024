@{
  ViewData["Title"] = "Thực Đơn";
}

<div class="container-fluid">
  <div class="row">
    <div class="col-12">
      @Html.Partial("_SearchBar")
    </div>
  </div>

  <div class="col-10">
    <div class="mb-3">
      <h4>Pizza</h4>
      <div class="row" id="pizzaRecipe">
      </div>
    </div>
  </div>

  <div class="col-10">
    <div class="mb-3">
      <h4>Cake</h4>
      <div class="row" id="cakeRecipe">
      </div>
    </div>
  </div>

</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script type="text/javascript">
  $(document).ready(function () {
    GetRecipes("pizza", "pizzaRecipe", false);
    GetRecipes("cake", "cakeRecipe", false);
  })
</script>
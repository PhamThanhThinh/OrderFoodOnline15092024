@model IEnumerable<OrderFoodOnline.Models.Recipe>

@foreach (var recipe in Model)
{
  <div class="col-sm-3 col-md-3 col-lg-3 col-xl-3">
    <div class="shadow rounded">
      <div class="card">
        <img src="@recipe.Image_URL" class="card-img-top h-75" />
        <div class="card-body">
          <p class="card-title">@recipe.Title</p>
          <br />
          <p class="card-title">@recipe.Publisher</p>
          <div>
            <a href="/Recipe/Order?id=@recipe.Id" class="btn btn-sm btn-primary p-2">Đặt Hàng</a>
          </div>
        </div>
      </div>
    </div>
  </div>
}